<%= form_tag refunds_path, :method => :get do %>
    <label>Insert transaction id: </label>
    <input id="transaction_id" name="transaction_id" type="text">

    <%= submit_tag('Retrieve') %>
<% end %>

<% if @refunds.present? %>
    <% @refunds.items.each_with_index do |refund, index| %>
        <label><%= "#{index + 1}. #{refund.to_json}" %></label>
        <br/>
    <% end %>
<% end %>