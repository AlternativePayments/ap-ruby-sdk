<%= form_tag refund_index_path, :method => :get do %>
    <label>Insert refund id: </label>
    <input id="refund_id" name="refund_id" type="text">
    <br/>
    <label>Insert transaction id: </label>
    <input id="transaction_id" name="transaction_id" type="text">

    <%= submit_tag('Retrieve') %>
<% end %>

<% if @refund.present? %>
    <label><%= @refund.to_json %></label>
<% end %>